<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextView">
        <item name="android:fontFamily">@font/nunito_font</item>
        <item name="android:textColor">@color/fontGrey</item>
    </style>

    <style name="TextView.small">
        <item name="android:fontFamily">@font/nunito_font</item>
        <item name="android:textColor">@color/fontGrey</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextView.Bold.large">
        <item name="android:fontFamily">@font/nunito_font_bold</item>
        <item name="android:textColor">@color/fontDarkGrey</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextView.Bold">
        <item name="android:fontFamily">@font/nunito_font_bold</item>
        <item name="android:textColor">@color/fontDarkGrey</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextView.Medium">
        <item name="android:fontFamily">@font/nunito_font_medium</item>
        <item name="android:textColor">@color/fontDarkGrey</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextView.SplashScreen">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/nunito_font_bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextView.Description">
        <item name="android:fontFamily">@font/nunito_font</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/fontGrey</item>
    </style>

    <style name="TextView.MainActivity">
    </style>

    <style name="TextView.MainActivity.ViewAll">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/primaryColor</item>
    </style>

    <style name="RoundCornerOverlay">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="Circle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">35dp</item>
        <item name="background">@color/greenColor</item>
    </style>

    <style name="EditText" />

    <style name="EditText.Input">
        <item name="android:fontFamily">@font/nunito_font</item>
        <item name="android:textColorHint">@color/darkGreyColor</item>
        <item name="android:textColor">@color/darkGreyColor</item>
        <item name="android:textSize">16sp</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

</resources>