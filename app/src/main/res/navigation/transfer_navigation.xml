<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/transfer_navigation"
    app:startDestination="@id/selectReceiverFragment">

    <fragment
        android:id="@+id/selectReceiverFragment"
        android:name="com.emrizkis.zwallet.ui.layout.transaction.transfer.setparams.SelectReceiverFragment"
        android:label="fragment_select_receiver"
        tools:layout="@layout/fragment_select_receiver" >
        <action
            android:id="@+id/action_selectReceiverFragment_to_inputAmountFragment"
            app:destination="@id/inputAmountFragment" />
    </fragment>
    <fragment
        android:id="@+id/inputAmountFragment"
        android:name="com.emrizkis.zwallet.ui.layout.transaction.transfer.setparams.InputAmountFragment"
        android:label="fragment_input_amount"
        tools:layout="@layout/fragment_input_amount" >
        <action
            android:id="@+id/action_inputAmountFragment_to_transferConfirmationFragment"
            app:destination="@id/transferConfirmationFragment" />
    </fragment>
    <fragment
        android:id="@+id/transferConfirmationFragment"
        android:name="com.emrizkis.zwallet.ui.layout.transaction.transfer.confirmation.TransferConfirmationFragment"
        android:label="fragment_transfer_confirmation"
        tools:layout="@layout/fragment_transfer_confirmation" >
        <action
            android:id="@+id/action_transferConfirmationFragment_to_pinConfirmationTransactionFragment"
            app:destination="@id/pinConfirmationTransactionFragment" />
    </fragment>
    <fragment
        android:id="@+id/successTransactionFragment"
        android:name="com.emrizkis.zwallet.ui.layout.transaction.transfer.status.SuccessTransactionFragment"
        android:label="fragment_success_transaction"
        tools:layout="@layout/fragment_success_transaction" />
    <fragment
        android:id="@+id/failedTransactionFragment"
        android:name="com.emrizkis.zwallet.ui.layout.transaction.transfer.status.FailedTransactionFragment"
        android:label="fragment_failed_transaction"
        tools:layout="@layout/fragment_failed_transaction" />
    <fragment
        android:id="@+id/pinConfirmationTransactionFragment"
        android:name="com.emrizkis.zwallet.ui.layout.transaction.transfer.confirmation.PinConfirmationTransactionFragment"
        android:label="fragment_pin_confirmation_transaction"
        tools:layout="@layout/fragment_pin_confirmation_transaction" >
        <action
            android:id="@+id/action_pinConfirmationTransactionFragment_to_successTransactionFragment"
            app:destination="@id/successTransactionFragment" />
        <action
            android:id="@+id/action_pinConfirmationTransactionFragment_to_failedTransactionFragment"
            app:destination="@id/failedTransactionFragment" />
    </fragment>
</navigation>