<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_navigation"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.emrizkis.zwallet.ui.layout.main.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_transferFragment2"
            app:destination="@id/transferFragment2" />
        <action
            android:id="@+id/action_homeFragment_to_topupFragment"
            app:destination="@id/topupFragment" />
    </fragment>
    <fragment
        android:id="@+id/transferFragment2"
        android:name="com.emrizkis.zwallet.ui.layout.transaction.transfer.TransferFragment"
        android:label="fragment_transfer"
        tools:layout="@layout/fragment_transfer" >
        <action
            android:id="@+id/action_transferFragment2_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/topupFragment"
        android:name="com.emrizkis.zwallet.ui.layout.transaction.topup.TopupFragment"
        android:label="fragment_topup"
        tools:layout="@layout/fragment_topup" >
        <action
            android:id="@+id/action_topupFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
</navigation>