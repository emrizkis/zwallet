<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.auth.pin.CreatePinFragment"
    android:layout_gravity="center">

<!--    <ScrollView-->
<!--        xmlns:android="http://schemas.android.com/apk/res/android"-->
<!--        xmlns:app="http://schemas.android.com/apk/res-auto"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent"-->
<!--        android:layout_marginBottom="0dp"-->
<!--        android:layout_gravity="center"-->
<!--        >-->


    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundColor"
        tools:context=".ui.auth.LoginFragment">

        <TextView
            android:id="@+id/textLogo"
            style="@style/TextView.SplashScreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:gravity="center_horizontal"
            android:text="@string/app_name"
            android:textColor="@color/primaryColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/containerForm"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/background_auth"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textLogo"
            app:layout_constraintVertical_bias="0.0">

            <TextView
                android:id="@+id/textLogin"
                style="@style/TextView.SplashScreen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:text="Create Security PIN"
                android:textAlignment="center"
                android:textColor="@color/darkGreyColor"
                android:textSize="22sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textLoginDesc"
                style="@style/TextView.SplashScreen.Description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="45dp"
                android:layout_marginTop="20dp"
                android:text="Create a PIN thatâ€™s contain 6 digits number for security purpose in Zwallet."
                android:textAlignment="center"
                android:textColor="@color/darkGreyColor"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textLogin" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textLoginDesc">

                <EditText
                    android:id="@+id/inputRegisterPin1"
                    android:layout_width="40dp"
                    android:layout_height="60dp"
                    android:layout_marginHorizontal="4dp"
                    android:inputType="number"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textSize="24sp"
                    android:maxLength="1"
                    android:singleLine="true"
                    android:nextFocusForward="@+id/inputRegisterPin2"
                    android:background="@drawable/background_pin_input"/>
                <EditText
                    android:id="@+id/inputRegisterPin2"
                    android:layout_width="40dp"
                    android:layout_height="60dp"
                    android:layout_marginHorizontal="4dp"
                    android:inputType="number"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textSize="24sp"
                    android:maxLength="1"
                    android:singleLine="true"
                    android:nextFocusForward="@+id/inputRegisterPin3"
                    android:background="@drawable/background_pin_input"/>
                <EditText
                    android:id="@+id/inputRegisterPin3"
                    android:layout_width="40dp"
                    android:layout_height="60dp"
                    android:layout_marginHorizontal="4dp"
                    android:inputType="number"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textSize="24sp"
                    android:maxLength="1"
                    android:singleLine="true"
                    android:nextFocusForward="@+id/inputRegisterPin4"
                    android:background="@drawable/background_pin_input"/>
                <EditText
                    android:id="@+id/inputRegisterPin4"
                    android:layout_width="40dp"
                    android:layout_height="60dp"
                    android:layout_marginHorizontal="4dp"
                    android:inputType="number"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textSize="24sp"
                    android:maxLength="1"
                    android:imeOptions="actionNext"
                    android:singleLine="true"
                    android:nextFocusForward="@+id/inputRegisterPin5"
                    android:background="@drawable/background_pin_input"/>
                <EditText
                    android:id="@+id/inputRegisterPin5"
                    android:layout_width="40dp"
                    android:layout_height="60dp"
                    android:layout_marginHorizontal="4dp"
                    android:inputType="number"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textSize="24sp"
                    android:maxLength="1"
                    android:imeOptions="actionNext"
                    android:singleLine="true"
                    android:nextFocusForward="@+id/inputRegisterPin6"
                    android:background="@drawable/background_pin_input"/>
                <EditText
                    android:id="@+id/inputRegisterPin6"
                    android:layout_width="40dp"
                    android:layout_height="60dp"
                    android:layout_marginHorizontal="4dp"
                    android:inputType="number"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textSize="24sp"
                    android:maxLength="1"
                    android:background="@drawable/background_pin_input"/>

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnConfirmCreatePin"
                style="@style/TextView.Medium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="@drawable/background_button_auth"
                android:paddingHorizontal="24dp"
                android:paddingVertical="15dp"
                android:text="Confirm"
                android:textAllCaps="false"
                android:textColor="#88888F"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintVertical_bias="0.493" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>