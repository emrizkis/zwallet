<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.layout.transaction.transfer.setparams.SelectReceiverFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@color/backgroundColor">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/mainActionBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_actionbar_blue"
            android:paddingVertical="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/actionBar"
                android:layout_width="match_parent"
                android:paddingHorizontal="23dp"
                android:layout_height="wrap_content"
                tools:ignore="MissingConstraints,UseCompoundDrawables">

                <ImageView
                    android:id="@+id/backButton"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_baseline_arrow_back_white_24"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Find Receiver"
                    android:layout_marginLeft="15dp"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    style="@style/TextView.Bold" />
            </LinearLayout>

            <EditText
                android:id="@+id/search"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:drawableStart="@drawable/ic_baseline_search_24"
                android:drawablePadding="22dp"
                android:layout_marginHorizontal="16dp"
                android:hint="Search receiver here"
                android:textColorHint="@color/fontGrey"
                android:textAlignment="textStart"
                android:layout_marginTop="40dp"
                android:paddingVertical="15dp"
                android:paddingHorizontal="18dp"
                android:inputType="text"
                style="@style/TextView"
                android:backgroundTint="@null"
                android:background="@drawable/background_item_white"
                app:layout_constraintTop_toBottomOf="@id/actionBar"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/contactTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contact"
            style="@style/TextView.Medium"
            android:layout_marginTop="40dp"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintTop_toBottomOf="@id/mainActionBar"/>
        <TextView
            android:id="@+id/contactFounded"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="17 Contact Founds"
            style="@style/TextView"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/contactTitle"/>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@+id/contactFounded"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="NotSibling">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerContact"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:isScrollContainer="true"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:listitem="@layout/example_item_contact"/>

            <ProgressBar
                android:id="@+id/loadingIndicator"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:indeterminateTint="@color/primaryColor"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>