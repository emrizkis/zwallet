<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.layout.transaction.transfer.confirmation.PinConfirmationTransactionFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundColor">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/mainActionBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_actionbar_blue"
            android:paddingVertical="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/actionBar"
                android:layout_width="match_parent"
                android:paddingHorizontal="23dp"
                android:layout_height="wrap_content"
                tools:ignore="MissingConstraints,UseCompoundDrawables">


                <ImageView
                    android:id="@+id/backButton"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_baseline_arrow_back_white_24"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enter Your Pin"
                    android:layout_marginLeft="15dp"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    style="@style/TextView.Bold" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ScrollView
            android:id="@+id/mainContent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="35dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mainActionBar"
            app:layout_constraintBottom_toTopOf="@id/btnSubmit"

            app:layout_constraintVertical_bias="0">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp">

                <TextView
                    android:id="@+id/textLogin"
                    style="@style/TextView.Bold.large"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="Enter PIN to Transfer"
                    android:textAlignment="center"
                    android:textColor="#3A3D42"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textPinDesc"
                    style="@style/TextView.Description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="45dp"
                    android:layout_marginTop="20dp"
                    android:text="Enter your 6 digits PIN for confirmation to continue transferring money. "
                    android:textAlignment="center"
                    android:textColor="@color/darkGreyColor"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textLogin" />



                <LinearLayout
                    android:id="@+id/formPin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:paddingHorizontal="22dp"
                    android:gravity="center"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textPinDesc">

                    <EditText
                        android:layout_weight="1"
                        style="@style/TextView.Bold.large"
                        android:id="@+id/inputRegisterPin1"
                        android:layout_width="40dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="4dp"
                        android:background="@drawable/background_pin_input"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="1"
                        android:nextFocusForward="@+id/inputRegisterPin2"
                        android:singleLine="true"
                        android:textSize="24sp"
                        tools:ignore="DuplicateIds" />

                    <EditText
                        android:layout_weight="1"
                        style="@style/TextView.Bold.large"
                        android:id="@+id/inputRegisterPin2"
                        android:layout_width="40dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="4dp"
                        android:background="@drawable/background_pin_input"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="1"
                        android:nextFocusForward="@+id/inputRegisterPin3"
                        android:singleLine="true"
                        android:textSize="24sp"
                        tools:ignore="DuplicateIds" />

                    <EditText
                        android:layout_weight="1"
                        style="@style/TextView.Bold.large"
                        android:id="@+id/inputRegisterPin3"
                        android:layout_width="40dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="4dp"
                        android:background="@drawable/background_pin_input"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="1"
                        android:nextFocusForward="@+id/inputRegisterPin4"
                        android:singleLine="true"
                        android:textSize="24sp"
                        tools:ignore="DuplicateIds" />

                    <EditText
                        android:layout_weight="1"
                        style="@style/TextView.Bold.large"
                        android:id="@+id/inputRegisterPin4"
                        android:layout_width="40dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="4dp"
                        android:background="@drawable/background_pin_input"
                        android:gravity="center"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:maxLength="1"
                        android:nextFocusForward="@+id/inputRegisterPin5"
                        android:singleLine="true"
                        android:textSize="24sp"
                        tools:ignore="DuplicateIds" />

                    <EditText
                        android:layout_weight="1"
                        style="@style/TextView.Bold.large"
                        android:id="@+id/inputRegisterPin5"
                        android:layout_width="40dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="4dp"
                        android:background="@drawable/background_pin_input"
                        android:gravity="center"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:maxLength="1"
                        android:nextFocusForward="@+id/inputRegisterPin6"
                        android:singleLine="true"
                        android:textSize="24sp"
                        tools:ignore="DuplicateIds" />

                    <EditText
                        android:layout_weight="1"
                        style="@style/TextView.Bold.large"
                        android:id="@+id/inputRegisterPin6"
                        android:layout_width="40dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="4dp"
                        android:background="@drawable/background_pin_input"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textSize="24sp"
                        tools:ignore="DuplicateIds" />

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSubmit"
            style="@style/TextView.Medium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/background_button_rounded"
            android:paddingHorizontal="24dp"
            android:paddingVertical="15dp"
            android:text="Transfer Now"
            android:textAllCaps="false"
            android:textColor="#88888F"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mainContent"
            app:layout_constraintVertical_bias="0.908" />



    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>