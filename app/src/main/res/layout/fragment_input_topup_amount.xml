<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.layout.transaction.topup.setparams.InputTopupAmountFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/backgroundColor">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/mainActionBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_actionbar_blue"
            android:paddingVertical="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/actionBar"
                android:layout_width="match_parent"
                android:paddingHorizontal="23dp"
                android:layout_height="wrap_content"
                tools:ignore="MissingConstraints,UseCompoundDrawables">


                <ImageView
                    android:id="@+id/backButton"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_baseline_arrow_back_white_24"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Topup"
                    android:layout_marginLeft="15dp"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    style="@style/TextView.Bold" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ScrollView
            android:id="@+id/mainContent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintTop_toBottomOf="@id/mainActionBar"
            app:layout_constraintBottom_toTopOf="@id/btnSubmit">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.cottacush.android.currencyedittext.CurrencyEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:maxNumberOfDecimalDigits="2"
                    android:maxLength="14"
                    android:hint="0.00"
                    app:currencySymbol="Rp"
                    app:useCurrencySymbolAsHint="true"
                    android:textColorHint="#B5BDCC"
                    android:textAlignment="center"
                    style="@style/TextView.Bold.large"
                    android:textSize="42sp"
                    android:layout_marginTop="40dp"
                    android:paddingHorizontal="18dp"
                    android:ems="10"
                    android:id="@+id/amount"
                    android:backgroundTint="@color/backgroundColor"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

<!--                <EditText-->
<!--                    android:id="@+id/amount"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:drawablePadding="22dp"-->
<!--                    android:layout_marginHorizontal="16dp"-->
<!--                    android:hint="0.00"-->
<!--                    android:textColorHint="#B5BDCC"-->
<!--                    android:textAlignment="center"-->
<!--                    style="@style/TextView.Bold.large"-->
<!--                    android:textSize="42sp"-->
<!--                    android:layout_marginTop="40dp"-->
<!--                    android:paddingHorizontal="18dp"-->
<!--                    android:maxLength="8"-->
<!--                    android:inputType= "number"-->
<!--                    android:backgroundTint="@color/backgroundColor"-->
<!--                    app:layout_constraintTop_toTopOf="parent"-->
<!--                    app:layout_constraintStart_toStartOf="parent"-->
<!--                    app:layout_constraintEnd_toEndOf="parent"/>-->

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSubmit"
            style="@style/TextView.Medium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/background_button_rounded"
            android:paddingHorizontal="24dp"
            android:paddingVertical="15dp"
            android:text="Topup"
            android:textAllCaps="false"
            android:textColor="@color/fontDarkGrey"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mainContent"
            app:layout_constraintVertical_bias="0.908" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>