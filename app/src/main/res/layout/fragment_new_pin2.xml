<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.layout.main.profile.changepin.NewPin2Fragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundColor"
        tools:context=".ui.layout.auth.LoginFragment">

        <LinearLayout
            android:id="@+id/actionBar"
            android:layout_width="match_parent"
            android:paddingHorizontal="23dp"
            android:paddingTop="20dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/backButton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_arrow_back_24"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change PIN"
                android:layout_marginLeft="15dp"
                android:layout_gravity="center"
                style="@style/TextView.Bold" />
        </LinearLayout>

        <ScrollView
            android:id="@+id/mainContent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@id/actionBar"
            app:layout_constraintBottom_toTopOf="@id/btnSubmit">

            <LinearLayout
                android:id="@+id/formPin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textLoginDesc"
                    style="@style/TextView.Description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:text="Type your new 6 digits security PIN to use in Zwallet again."
                    android:textAlignment="center"
                    android:textColor="@color/darkGreyColor"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:id="@+id/form"
                    android:layout_marginTop="50dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginHorizontal="20dp"
                    android:gravity="center"
                    app:layout_constraintTop_toBottomOf="@id/textLoginDesc">

                    <EditText
                        android:background="@drawable/background_pin_input"
                        android:layout_weight="1"
                        style="@style/TextView.Bold.large"
                        android:id="@+id/inputRegisterPin1"
                        android:layout_width="40dp"
                        android:layout_height="60dp"
                        android:layout_marginEnd="5dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="1"
                        android:nextFocusForward="@+id/inputRegisterPin2"
                        android:singleLine="true"
                        android:textSize="24sp"
                        tools:ignore="DuplicateIds" />
                    <EditText
                        android:background="@drawable/background_pin_input"
                        android:layout_weight="1"
                        style="@style/TextView.Bold.large"
                        android:id="@+id/inputRegisterPin2"
                        android:layout_marginHorizontal="5dp"
                        android:layout_width="40dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="1"
                        android:nextFocusForward="@+id/inputRegisterPin3"
                        android:singleLine="true"
                        android:textSize="24sp"
                        tools:ignore="DuplicateIds" />
                    <EditText
                        android:background="@drawable/background_pin_input"
                        android:layout_weight="1"
                        style="@style/TextView.Bold.large"
                        android:id="@+id/inputRegisterPin3"
                        android:layout_marginHorizontal="5dp"
                        android:layout_width="40dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="1"
                        android:nextFocusForward="@+id/inputRegisterPin4"
                        android:singleLine="true"
                        android:textSize="24sp"
                        tools:ignore="DuplicateIds" />
                    <EditText
                        android:background="@drawable/background_pin_input"
                        android:layout_marginHorizontal="5dp"
                        android:layout_weight="1"
                        style="@style/TextView.Bold.large"
                        android:id="@+id/inputRegisterPin4"
                        android:layout_width="40dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="1"
                        android:nextFocusForward="@+id/inputRegisterPin5"
                        android:singleLine="true"
                        android:textSize="24sp"
                        tools:ignore="DuplicateIds" />
                    <EditText
                        android:layout_marginHorizontal="5dp"
                        android:background="@drawable/background_pin_input"
                        android:layout_weight="1"
                        style="@style/TextView.Bold.large"
                        android:id="@+id/inputRegisterPin5"
                        android:layout_width="40dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="1"
                        android:nextFocusForward="@+id/inputRegisterPin6"
                        android:singleLine="true"
                        android:textSize="24sp"
                        tools:ignore="DuplicateIds" />
                    <EditText
                        android:layout_marginStart="5dp"
                        android:background="@drawable/background_pin_input"
                        android:layout_weight="1"
                        style="@style/TextView.Bold.large"
                        android:id="@+id/inputRegisterPin6"
                        android:layout_width="40dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="1"
                        android:singleLine="true"
                        android:textSize="24sp"
                        tools:ignore="DuplicateIds" />

                </LinearLayout>



            </LinearLayout>

        </ScrollView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSubmit"
            style="@style/TextView.Medium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@drawable/background_button_rounded"
            android:paddingHorizontal="24dp"
            android:paddingVertical="15dp"
            android:layout_marginBottom="30dp"
            android:text="Change PIN"
            android:textAllCaps="false"
            android:textColor="#88888F"
            app:layout_constraintTop_toBottomOf="@id/mainContent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>