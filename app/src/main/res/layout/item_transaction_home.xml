<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingVertical="20dp"
    android:paddingHorizontal="16dp"
    android:orientation="horizontal"
    android:layout_marginBottom="10dp"
    android:background="@drawable/background_item_white"
    tools:ignore="ExtraText">


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageTransaction"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginStart="16dp"
        app:shapeAppearanceOverlay="@style/RoundCornerOverlay"
        android:src="@drawable/sample01"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="15dp"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nameTransactionUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Monkey D. Luffy"
            android:textColor="@color/fontDarkGrey"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/typeTransaction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Transfer"
            android:layout_marginTop="9dp"
            android:textColor="@color/fontGrey"
            android:textSize="14sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="Rp100.000"
        android:textColor="@color/greenColor" />

</LinearLayout>