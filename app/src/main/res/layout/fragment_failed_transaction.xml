<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.layout.transaction.transfer.status.FailedTransactionFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/backgroundColor">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/mainActionBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_actionbar_blue"
            android:paddingBottom="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_actionbar_blue"
                android:paddingBottom="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:id="@+id/actionBar"
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    android:paddingHorizontal="23dp"

                    android:gravity="center"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Transfer Details"
                        android:layout_marginLeft="15dp"
                        android:layout_gravity="center"
                        android:textColor="@color/white"
                        style="@style/TextView.Bold" />
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/mainActionBar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="MissingConstraints">

                <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imageSuccess"
                    android:layout_marginTop="30dp"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="16dp"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:background="@color/redAlert"
                    app:shapeAppearanceOverlay="@style/Circle"
                    android:src="@drawable/ic_baseline_close_white_24"/>

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Transfer Failed"
                    android:textAlignment="center"
                    android:layout_marginTop="30dp"
                    app:layout_constraintTop_toBottomOf="@id/imageSuccess"
                    style="@style/TextView.Bold.large"/>
                <TextView
                    android:id="@+id/failDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="We canâ€™t transfer your money at the moment, we recommend you to check your internet connection and try again."
                    android:textAlignment="center"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@id/title"
                    style="@style/TextView.Description"/>


                <LinearLayout
                    android:id="@+id/row1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp"
                    app:layout_constraintTop_toBottomOf="@id/failDesc"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <LinearLayout
                        android:layout_width="162dp"
                        android:layout_height="wrap_content"
                        android:padding="15dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:background="@drawable/background_item_white">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Amount"
                            style="@style/TextView.small" />

                        <TextView
                            android:id="@+id/amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="Rp100.000"
                            style="@style/TextView.Medium" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="162dp"
                        android:layout_height="wrap_content"
                        android:padding="15dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="16dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:background="@drawable/background_item_white">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Left Balance"
                            style="@style/TextView.small" />

                        <TextView
                            android:id="@+id/balanceLeft"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="Rp20.000"
                            style="@style/TextView.Medium" />

                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/row2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@id/row1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <LinearLayout
                        android:layout_width="162dp"
                        android:layout_height="wrap_content"
                        android:padding="15dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:background="@drawable/background_item_white">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Date"
                            style="@style/TextView.small" />

                        <TextView
                            android:id="@+id/date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="May 11, 2020"
                            style="@style/TextView.Medium" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="162dp"
                        android:layout_height="wrap_content"
                        android:padding="15dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="16dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:background="@drawable/background_item_white">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Time"
                            style="@style/TextView.small" />

                        <TextView
                            android:id="@+id/time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="12.20"
                            style="@style/TextView.Medium" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/row3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@id/row2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="15dp"
                        android:layout_marginHorizontal="16dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:background="@drawable/background_item_white">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Notes"
                            style="@style/TextView.small" />

                        <TextView
                            android:id="@+id/someNotes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="For buying some socks"
                            style="@style/TextView.Medium" />

                    </LinearLayout>


                </LinearLayout>

                    <TextView
                        android:id="@+id/from"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="From"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginTop="40dp"
                        style="@style/TextView.Medium"
                        app:layout_constraintTop_toBottomOf="@id/row3"/>

                    <LinearLayout
                        android:id="@+id/sender"
                        android:background="@drawable/background_item_white"
                        android:layout_marginTop="20dp"
                        android:layout_marginHorizontal="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/from">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/imageSender"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginVertical="20dp"
                            app:shapeAppearanceOverlay="@style/RoundCornerOverlay"
                            android:src="@drawable/sample01"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="15dp"
                            android:layout_gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/nameSender"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Monkey D. Luffy"
                                android:layout_marginTop="23dp"
                                android:textColor="@color/fontDarkGrey"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/phoneSender"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="9dp"
                                android:layout_marginBottom="23dp"
                                android:gravity="center"
                                android:text="+62 1234 1234 123"
                                android:textColor="@color/fontGrey"
                                android:textSize="14sp" />

                        </LinearLayout>


                    </LinearLayout>

                    <TextView
                        android:id="@+id/to"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="To"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginTop="40dp"
                        style="@style/TextView.Medium"
                        app:layout_constraintTop_toBottomOf="@id/sender"/>


                    <LinearLayout
                        android:id="@+id/receiver"
                        android:background="@drawable/background_item_white"
                        android:layout_marginTop="20dp"
                        android:layout_marginHorizontal="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/to">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/imageReceiver"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginVertical="20dp"
                            app:shapeAppearanceOverlay="@style/RoundCornerOverlay"
                            android:src="@drawable/sample01"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="15dp"
                            android:layout_gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/nameContact"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Monkey D. Luffy"
                                android:layout_marginTop="23dp"
                                android:textColor="@color/fontDarkGrey"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/phoneNumber"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="9dp"
                                android:layout_marginBottom="23dp"
                                android:gravity="center"
                                android:text="+62 1234 1234 123"
                                android:textColor="@color/fontGrey"
                                android:textSize="14sp" />

                        </LinearLayout>


                    </LinearLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnToHome"
                    style="@style/TextView.Medium"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="57dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/background_button_rounded_active"
                    android:paddingHorizontal="24dp"
                    android:paddingVertical="15dp"
                    android:text="Try Again"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/receiver"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>